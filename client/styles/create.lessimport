.editable {
  outline: 1px dashed #e0e1e2;
  cursor: text;
}



div.floating-story-buttons {
  button {
    z-index: 30;
    background-color: @dark-color;
    color: @light-color;
    cursor: pointer;
    padding: 5px;
    text-align: center;
    font-size: 14px;
    float: left;
    &:not(:last-child) {
      margin-right: 13px;
    }
    height: 40px;
    width: 85px;

    &:hover {
      background-color: @action-color;
      color: @dark-color;
    }
  }
  position: fixed;
  top: 115px;
  right: 13px;
  z-index: 10;

  .saved-text{
    float: left;
    text-transform: uppercase;
    margin-right: 15px;
    margin-top: 23px;
    font-size: 13px;
  }

  .publish-story{
    width: 140px;
  }
}

input.background-image-input {
  width: 140px;
  position: absolute;
  right: 150px;
  top: 50px;
}


div.save-background-image {
  .background-transition;
  position: absolute;
  right: 110px;
  top: 50px;
  border: 1px solid black;

  &:hover {
    background-color: white;
  }
}

div.title-overlay {
  min-width: 1024px;
  height: 350px;
  z-index: 30;
  // background-color: @action-color;
  color: @light-color;
  position: relative;

  background-color: @action-color;
  background-position: center center;
  background-attachment: fixed;
  background-repeat: no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

  div.logo {
    .opacity-transition;
    width: 60px;
    height: 60px;
    border-radius: 30px;
    position: relative;
    top: 19px;
    right: -20px;
    background-color: @dark-color;
    opacity: 0.0;
    img {
      width: 60px;
    }

    &.visible {
      opacity: 1.0;
    }
  }

  &.fixed {
    position: fixed;
    height: 100px;
    width: 100%;
  }

  &.read:hover {
    border-bottom: 1px dashed grey;
  }

  div#banner-overlay {
    width: 100%;
    height: 350px;
    background-color: @dark-color;
    opacity: 0.0;
    position: absolute;

    &.fixed {
      height: 100px;
    }
  }

  div.description {
    width: 500px;
    float: right;
    font-size: 20px;
    margin-right: 75px;
    line-height: 26px;
    margin-top: 100px;
  }


  div.attribution {
    position: absolute;
    top: 305px;
    right: 15px;
    background-color: @dark-color;
    padding: 5px 10px;
    opacity: 0.0;

    &.shown {
      opacity: 1.0;
    }
  }

  div.aj {
    top: 15px;
  }

  div.title-author {
    position: absolute;
    margin-left: 95px;
    margin-top: 125px;
    max-width: 1300px;
    padding: 11px;
    background-color: @dark-color;
    &.fixed {
      position: fixed;
      padding-top: 20px;
    }
    div.story-title {
      max-width: 100%;
      font-weight: bold;
      font-size: 30px;
      padding-bottom: 15px;
      overflow-x: hidden;
      overflow-y: visible;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    div.author {
      font-size: 20px;
      //font-style: italic;
    }
  }
}

div.button-options {
  button {
    background-color: @dark-color;
    color: @light-color;
    cursor: pointer;
    padding: 5px;
    text-align: center;
    font-size: 16px;
    float: left;
    &:not(:last-child) {
      margin-right: 10px;
    }

    width: 110px;

    &:hover {
      background-color: @action-color;
      color: @dark-color;
    } 
  }

  div.delete-button {
    &:hover {
      background-color: red;
    }
  }
}

header.header {
  div.story-title {
    float: left;
  }
  div.category {
    display: inline;
    font-size: 14px;
    margin-left: 50px;
  }
  div.analytics {
    display: inline;
    font-size: 14px;
    margin-left: 30px;
  }
  div.username {
    display: inline;
    position: absolute;
    right: 145px;
    text-align: right;
    top: 25px;
  }
}

div.browser-offset {
  .no-select;
  padding-top: 100px;
}

div.narrativeView {
  section {
    margin-bottom: 0 !important;
  }
}

.new-section {
  fill: @dark-color;

  &:hover {
    cursor: pointer;
  }
}

div.vertical-narrative {
  z-index: 20;

  .new-section {
    min-height: 75px;
    height: 75px;
    overflow: hidden;
    font-size: 55px;
    line-height: 75px;
    text-align: center;
  }


  .unminimized-new-section-bar {
    border-top: 12px solid @background-color;
    border-bottom: 12px solid @background-color;
    background-color: @selected-background-color;
    height: 95px;
  }

  .new-section.unminimized {
    .unminimized-new-section-bar;
  }

  .new-section.minimized {
    .height-transition;
    background-color: @background-color;
    height: 12px;
    border-top: 0px;
    border-bottom: 0px;
    min-height: 0px;
    svg{
      visibility: hidden;
    }
    &:hover {
      .unminimized-new-section-bar;
      svg{
        visibility: inherit;
      }
    }
  }
}


.control-label {
    font-weight: bold;
    font-size: 17px;
}

textarea {
  border: none;
  overflow: auto;
  outline: none;

  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  font-size: 14px;
  width: 100%;
  word-wrap: break-word;

  &.text-input {
    max-height: 300px;
    background-color: @dark-color;
    margin-top: 13px;
    color: @white-color;
    padding: 18px;
    line-height: 27px;
    font-size: 16px;
  }
}

input {
  width: 100%;
  outline: none;
  font-size: 14px;
}

svg{
    transition: fill 0.25s ease;
}

.new-section {
  &:hover {
    circle{
      fill: @action-color;
    }
  }
}


div.horizontal-context {
  section {
    padding: 0;
  }

  .new-section {
    height: @horizontal-content-height;
    font-size: 55px;
    line-height: @horizontal-content-height;
    text-align: center;
    width: 75px;
    z-index: 30;
    // box-shadow: 3px 3px #848484;
  }

  div.input-label {
    margin-top: 12px;
    margin-bottom: 10px;
  }

  @contentIconBannerHeight: 80px;

  div.content-icons {
    display:flex;
    justify-content:space-between;
    height: @contentIconBannerHeight;
    padding-left: 17px;
    padding-right: 17px;
    background-color: @panel-color;
    div.row {
      text-align: justify;
      -ms-text-justify: distribute-all-lines;
      text-justify: distribute-all-lines;
      margin-left: 10%;
      margin-right: 10%;
    }
    svg {
      padding: 1.5px;
      @circle-diameter: 44px;
      height: @circle-diameter;
      width: @circle-diameter;
      vertical-align: top;
      display: inline-block;
      &:hover {
        circle{
          fill: @action-color;
        }
      }


    }
    .active{
      svg{
        circle{
          fill: @action-color;
        }
      }
    }
    .unimplemented {
//      svg {
//        fill: @inactive-color;
//      }
    }
    span.stretch {
      width: 100%;
      display: inline-block;
      font-size: 0;
      line-height: 0;
    }
  }

  .horizontal-new-section {
    position: absolute;
    background-color: @white-color;
    svg{
      .transition(transform 0.2s ease, fill 0.25s ease);
    }
    &.editing{
      svg{
        .transform(rotate(-45deg));
      }
    }
  }

  img.content-type-button {
    position: absolute;
    background-color: white;
    border-radius: 20px;
    border: 1px solid white;
    width: 40px;
    height: auto;
    top: -20px;
    right: 10px;
  }



  div.edit-delete {
    position: absolute;
    top: -10px;
    right: 62px;
    width: 60px;
    color: black;
    button {
      line-height: 0px;
      height: 25px;
      border-radius: 13px;
      width: 25px;
    }

    // TODO Create classes for these
    .edit {
      float: left;
    }
    .save, .delete {
      float: right;
      margin: 0;
    }

    .delete {
      float: right;

      &:hover {
        background-color: red;
      }
    }
  }

  div.edit-delete {
    right: 15px;
  }

  div.create-section {
    padding-top: 22px;
    padding-left: 22px;
    padding-right: 22px;
    height: calc(100% ~"-" @contentIconBannerHeight);
  }

  div.create-section.unimplemented {
    font-weight: bold;
  }


  div.tabs {
    border-bottom: 1px solid @medium-color;
    margin-bottom: 15px;
    ul {
      margin: 0;
      padding-left: 0px;
      li {
        &:first-child {
          padding-left: 5px;
        }
        padding-left: 5px;
        cursor: pointer;
        font-size: 12px;
        font-weight: bold;
        text-transform: uppercase;
        display: inline-block;
        width: 140px;
        border-bottom: 2px solid white;

        &.selected, &:hover {
          border-bottom: 2px solid @action-color;
        }
      }
    }
  }

    
  @searchFormHeight: 75px;   
  @innerElementPadding: 9px;   
     
  div.search-outside-input-container {

    @searchTriggerWidth: 90px;
    @searchButtonWidth: 66px;
    @searchInputHeight: 35px; 
    @searchInputWidth: calc(100% ~"-" @searchTriggerWidth ~"-" @innerElementPadding);

    position: relative;
    width: 0%;
    overflow: hidden;
    min-width: calc(@searchTriggerWidth+@innerElementPadding);
    height: @searchInputHeight; 

    .transition(width 0.3s);

    -webkit-backface-visibility: hidden;        

    .search-trigger, .search-input-container, input, .search-button {
      font-size: 12px;
      height: @searchInputHeight;
      color: @light-color;
      position: absolute;
      float: left;
    }

    .search-trigger {
      z-index: 10;
      text-align: center;
      line-height: @searchInputHeight;
      width: @searchTriggerWidth;
      background: @black-color;
    }

    .search-input-container {
      background: @dark-color;
      //width: calc(100% ~"-"@searchButtonWidth ~"-" @innerElementPadding);
      width: 100%;
      padding-left: 10px;
    }

    input {     
      background: @dark-color;
      width: @searchInputWidth;
      left: @searchTriggerWidth+10px;
      display: none;
    }

    .search-button {
      background: @dark-color;
      left: calc(100% ~"-" @searchButtonWidth);
      padding: 7.5px 13px 7.5px 40px;
    }

    .search-radios{
      position: absolute;
      top: 60px;
    }
  }

  .search-outside-input-container.search-open {
    width: 100%;
    input {
      display:block;
    }
  }  
     
      
  ol.search-results-container {   
    background-color: #ffffff;   
    width: 100%;   
    height: calc(100% ~"-" @searchFormHeight ~"-" 35px);   
    overflow-y: scroll;    
    overflow-x: ellipsis;    
    margin-top: 15px;  
    list-style-type: none;  
     
    @aspectRatio: 4/3;
    @searchResultHeight: 94px;     
    @thumbnailHeight: 90px;    
    @thumbnailWidth: 120px; 
    
    li {
      border-top: 1px solid #e7e7e7;  
      border-right: none;
      border-left: none; 
      white-space: normal;
      cursor: pointer;
    
      &:hover {
        background: @light-color; 
      }
    }

    li.loading-icon{
      text-align: center;
      height: 60px;
      padding-top: 20px;
      &:hover {
        background: inherit;
      }
    }

    li.tile {
      height: 120px; 
      display: inline-block;
      margin-right: 5px;

      img {
        height: 116px;
      }

      &.focused {
        border: 2px solid @action-color;
      }
    }
       
    div.search-result {    
      cursor: pointer;
      height: @searchResultHeight;   
    }    
    
    div.thumbnail {
      
      img{   
        width: @aspectRatio * (@searchResultHeight - (2 * @innerElementPadding));
        padding-top: @innerElementPadding;
        margin-left: 10px;
      }    
    }    
     
    @focusedThumbnailHeight: (2 * @searchResultHeight) - (2 * @innerElementPadding);
    @focusedThumbnailWidth: @aspectRatio * @focusedThumbnailHeight;
    
    div.focused-search-result { 
      height: @searchResultHeight*2;    
      background: #e7e7e7;   
    }    
    
    div.focused-thumbnail {    
      padding-top: @innerElementPadding;
      margin-left: 10px;  

      iframe {
        width: @focusedThumbnailWidth;
        height: @focusedThumbnailHeight;
      }
    }    
       
    @textAreaHeight: 75px;   
    div.info{    
      position: relative;   
      top:  -@searchResultHeight+@innerElementPadding;  
      left: @thumbnailWidth;   
      max-width: calc(100% ~"-" 10px ~"-" @thumbnailWidth);   
      max-height: @searchResultHeight - 10px;   

      div.content-title {    
        font-weight: bold; 
        font-size: 12px;
        margin-bottom: 5px;    
        overflow: hidden;    
        height: @textAreaHeight*0.2;  // 15px
        line-height: 16px;
      }    
         
      .date, .user {   
        font-size: 10px;    
        height: @textAreaHeight*0.32;   
      }    
     
      .date { 
        text-align: right; 
        position: relative;
        top: -@textAreaHeight*0.32;   
      }    
         
      .descr {   
        margin-bottom: 8px;
        overflow: hidden; 
        font-size: 11px;   
        height: @textAreaHeight*0.4533333;  // 34px
        line-height: 16px;   
      }    
    }

    @focusedSearchResultHeight: @searchResultHeight* 2;
    div.focused {
      top: -177px;
      left: 20px + @focusedThumbnailWidth;   
      max-width: calc(100% ~"-" 30px ~"-" @focusedThumbnailWidth);
      max-height: @focusedSearchResultHeight - 10px;   
      
      .descr {
        height: 132px;
        overflow: hidden;
        margin-bottom: 0px;
      }
    }  
  }  
    button.add-button {
      position: relative;
      left: calc(100%~"-" 90px);
      background-color: @action-color;
      color: @light-color;
      height: 35px;
      width: 90px;
      bottom: 15px;
      margin-top: 12px;
      text-align: center;
      font-size: 12px;
      line-height: 35px;
      float: left;
      cursor: auto;

      &:not(:last-child) {
        margin-right: 10px;
      }

      &.enabled {
        cursor: pointer;
      }
  }
}


div.text-section {
  line-height: 26px;
  text-align: left;
  font-size: 16.5px;
  margin-top: 25px;
  margin-left: 30px;
  margin-right: 30px;
}



@fold-editor-row-height: 55px;

.edit-menu{
  .inverted-icon-colors;

  max-height: @fold-editor-row-height * 5;
  opacity: 1;
  background-color: green;
  position: absolute;

  .underline-button{
    text-decoration: underline;
  }
  .bold-button{
    font-weight: bold;
  }
  .italic-button{
    font-style: italic;
  }
  li{
    width: 100%;
    height: @fold-editor-row-height;
    background-color: @dark-color;
    svg{
      @icon-size: 25px;
      text-align: center;
      height: @icon-size;
      width: @icon-size;
      float: left;
      margin-right: 10px;
      margin-top: -3px;
    }
    svg.back-arrow{
      margin-top: .05em;
      @arrow-size: 20px;
      height: @arrow-size;
      width: @arrow-size;
    }
    button{
      .size-to-fit;
    }
  }
  li:nth-child(even) {background-color: @dark-color;}
  li:nth-child(odd) {background-color: @black-color;}

  svg.add-card-icon{
    path {
      fill: @light-color;
    }
    circle {
      opacity: 0;
    }

  }

  button{
    color: @light-color;
    background-color: inherit;
    font-family: 'Alright Sans', 'Lucida Grande', 'Avenir Next', sans-serif;
    font-weight: 400;
    font-size: .9em;
    padding: 0.5em 1em 0 1em;
    text-align: left;
    text-decoration: none;
    display: inline-block;
    &:not([DISABLED]){
      cursor: pointer;
      &:hover {
        color: white;
        background-color: @action-color;
      }
    }
  }
  svg{
    fill: @light-color;
  }

}

.floating-menu{
  .edit-menu;
  display: none;
  z-index: 9999999;
  &:after{
    @triangleSize: 8px;
    content:'';
    position: absolute;
    top: 100%;
    left: 50%;
    margin-left: -@triangleSize;
    width: 0;
    height: 0;
    border-top: solid @triangleSize @panel-color;
    border-left: solid @triangleSize transparent;
    border-right: solid @triangleSize transparent;
  }
}


div#fold-editor{
  .floating-menu;
  width: 205px;

  #fold-editor-button-group {
    height: @fold-editor-row-height;
    background-color: @panel-color;
    .standard-icon-colors;
    svg{
      @size: 40px;
      height: @size;
      width: @size;
      vertical-align: middle;
    }
    button {
      width: 25%;
      height: 100%;
      padding: 0;
      text-align: center;
      vertical-align: middle;
      float: left;
      font-size: 20pt;
      line-height: @fold-editor-row-height;
      &:hover {
        circle{
          fill: @action-color;
        }
        background-color: inherit;
      }
    }
  }
}
div#fold-link-remover{
  .floating-menu;
  width: 55px;
}

.vertical-edit-menu{
  .edit-menu;
  right: 10px;
  top: 10px;
}

.narrative-babyburger {
  float:right;
  position: relative;
  margin-right: -30px;
  margin-top: -25px;
  z-index: 30;
}

div.anchor-menu {
  display: none;
  overflow: scroll;
}
div.context-anchor-menu {
  span{
    overflow: hidden;
    width: calc(~"100% - 30px");
    display: inline-block;
    text-overflow: ellipsis;
  }
  display: none;
  width: 100%;

  .back-arrow{
    path{
      fill: @light-color;
    }
  }
  button{
    text-align: left;

  }
  .context-anchor-list{
    max-height: 3.9 * @fold-editor-row-height;
    overflow: scroll;
    z-index: 8000;
    position:relative;
  }

  div.bottom-bar{
    .box-shadow(0px -8px 12px 0px rgba(0,0,0,0.75));
  }
}
div.bottom-bar{
  position:relative;
  height: 5px;
  width: 100%;
  background-color: @panel-color;
  z-index: 9000;
}
