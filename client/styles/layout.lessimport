@nonMobileNarrativeSectionPadding: 30px;

.vertical-narrative-section {
  padding: @nonMobileNarrativeSectionPadding;

  @media @mobile {
    padding: 20px;
  }
  cursor: default;

  a {
    cursor: auto;
    padding: 4px 4px;
  }

  @border-width: 1px;
  border: @border-width solid transparent;

  position: relative;
  .width-transition;
  .height-transition;
  overflow-y: hidden;
  width: 100%;
  min-height: @horizontal-content-height + @remix-bar-height;
  color: @unselected-text-color;

  &.read {
    margin-bottom: @card-spacing;
  }

  background-color: @unselected-background-color;

  .selected-styling {
    cursor: text;
    border: @border-width solid @inactive-color;
    color: @dark-color;
    opacity: 1.0;
    background-color: @selected-background-color;
    p {
      cursor: text;
    }
    a {
      // moved background-transition to specific cases so everything doesn't need to animate when a new card becomes selected
      cursor: pointer;
      background-color: @unselected-link-color;
      color: inherit;
      &:hover {
        background-color: @medium-color;
        .background-transition;
      }
      &.active {
        background-color: @action-color;
        .background-transition;
        color: white;
      }
      &.placeholder {
        background-color: @panel-color;
        .background-transition;
        color: white;
      }
    }
  }

  &.selected {
    .selected-styling;
  }
  @media @mobile {
    .selected-styling;
  }
}

.narrative-section {
  float: left;
  display: inline-block;
  &.new-section{
