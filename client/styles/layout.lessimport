.standard-icon-colors {
  .bg{
    fill: @dark-color;
  }
  .fg{
    fill: @light-color;
  }
  .active{
    .bg{
      fill: @action-color;
    }
    .remix-icon{
      .bg{
        fill: @action-color;
      }
    }
  }

  .back-arrow{
    .fg{
      fill: @dark-color;
    }
  }
}

.inverted-icon-colors {
  .bg{
    fill:  @light-color;
  }
  .fg{
    fill: @dark-color;
  }

  .active{
    .bg{
      fill: @action-color;
    }
    .remix-icon{
      .bg{
        fill: @action-color;
      }
    }
  }

  .back-arrow{
    .fg{
      fill: @light-color;
    }
  }
}

.text-align-start{
  text-align: left; // fallback
