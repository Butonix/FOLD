
@black-color: #1D1D1D;
@dark-color: #323232;
@medium-color: #CCCCCB;
@light-color: #F4F4F4;
@white-color: white;

@background-color: #F8F8F8;
@action-color: #1DB259;
@inactive-color: #DDDDDD;
@placeholder-color: #acacac;
@panel-color: #585094;
@remix-color: #EA1D75;
@favorite-color: #FFD600;
@dark-favorite-color: #EFC820;

@unselected-text-color: #999999;
@unselected-background-color: #eeeeee;

