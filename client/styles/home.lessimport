@breakpoint-one: 900px;
@breakpoint-two: 600px;

div#login-buttons-and-more {
  position: absolute;
  top: 15px;
  left: 15px;
}

div.home-top {
  border-top: 6px solid @action-color;
  position: fixed;
  background-color: white;
  height: 145px;
  width: 100%;
  z-index: 10;
  //border-bottom: 1px solid @medium-color;
  -webkit-box-shadow: 0 2px 8px -6px @dark-color;
  -moz-box-shadow: 0 2px 8px -6px @dark-color;
  box-shadow: 0 2px 8px -6px @dark-color;
  div.logo-title {
    display: inline-block;
    margin-left: 60px;
    margin-top: 37px;
    width: 255px;
    div.logo {
      float: left;
      z-index: 10;
    }

    div.title {
      float: right;
      margin-top: 5px;
      width: 164px;
    }
  }

  div.filter {
    position: absolute;
    font-size: 15px;
    top: 67px;
    right: 68px;

    span.filters {
      margin-right: 10px;
    }
    span.categories {
      margin-left: 10px;
    }
  }

  div.action-items {
    @height: 45px;
    position: absolute;
    top: -6px;
    right: 60px;
    color: @light-color;
    font-family: 'Muli', 'Lucida Grande', 'Avenir Next', sans-serif;

    a, button{
      padding: 12px 20px;
      .size-to-fit;
    }
    a{
      line-height: @height;
    }

    .create-story {
      background-color: @action-color;
      &:hover {
        background-color: @dark-color;
      }
    }

    li {
      height: @height;
      float: left;
      display: inline-block;
      margin-right: 12px;
      &:hover {
        background-color: @dark-color;
      }
      position: relative;

    }

    div.sign-in {
      button.twitter-signin, button.email-signin {
        background-color: @remix-color;  
      }
      
    }

    .user-action {
      background-color: @remix-color; 
      &:hover {
        background-color: @dark-color;
      }
    }

    .about-fold {
      background-color: @panel-color;
    }
  }

