div#login-buttons-and-more {
  position: absolute;
  top: 15px;
  left: 15px;
}

div.home-top {
  border-top: 5px solid @action-color;
  position: fixed;
  background-color: white;
  height: 145px;
  width: 100%;
  z-index: 10;
  div.logo-title {
    display: inline-block;
    margin-left: 50px;
    margin-top: 37px;
    width: 260px;
    div.logo {
      float: left;
      z-index: 10;
    }

    div.title {
      float: right;
      margin-top: 5px;
      width: 164px;
    }
  }

  div.filter {
    position: absolute;
    font-size: 18px;
    top: 55px;
    left: 400px;
    span {
      display: inline-block;
      text-transform: uppercase;
      font-weight: bold;

      ul {
        margin: 0;
        padding: 0;
      }
    }

    span.filters {
      margin-right: 10px;
    }
    span.categories {
      margin-left: 10px;
    }
  }

  div.action-items {
    position: absolute;
    top: -5px;
    right: 60px;

    & > div, & > a div {
      display: inline-block;
      color: @light-color;
      font-weight: bold;
      padding: 8px 20px;
      margin-right: 12px;
    }

    div.create-story {
      background-color: @action-color;
    }

    div.user-action {
      background-color: @remix-color; 
    }

    div.about-fold {
      background-color: @panel-color;
    }
  }
}

section.stories {
  padding-top: 150px;
  width: 100%;
  height: 100%;
  background-color: @background-color;

  div.story-browser {
    height: 80px;
  }

  div.horizontal-line {
    width: 100%;
    height: 5px;
    background-color: @light-color;
    margin-top: 250px;
    position: absolute;
    z-index: 0;
  }

  div.overlay-image {
    height: 110px;
    overflow: hidden;
    img {
      max-width: 100%;
    }
  }

  div.headline {
    background-color: @white-color;
    height: auto;
    /*height depends on length of story headline*/
    width: 100%;
    position: relative;
    font-size: 21px;
    font-weight: bold;
    padding: 25px 30px 0px 30px;
  }

  div.byline {
    padding: 10px 25px;
    div.pull-left {
      width: 420px;
      div.author-image {
        display: inline-block;
        float: left;
        background-color: @black-color;
        width: 50px;
        height: 50px;
        border-radius: 25px;
      }
      div.author-name-date {
        display: inline-block;
        margin-left: 20px;
        & > div {
          line-height: 14px;
          font-size: 12px;
        }
        div.author-name {
          margin-top: 12px;
        }
      }
    }
  }

  div.content {
    margin-top: 10px;
    padding: 0 30px;
    height: 100px;
    max-height: 200px;
    overflow-y: scroll;
  }

  div.story-container {
    padding-top: 50px;
    padding-bottom: 75px;
    width: 1150px;
    margin: 0 auto;
  }

  div.story {
    background-color: @white-color;
    border: 1px solid @medium-color;
    // box-shadow: 3px 3px @medium-color;

    // 540 980+
    // 415 980-
    height: 290px;
    /*height depends on length of story abstract*/
    width: 540px;
    z-index: 2;
    display: inline-block;
    position: relative;
    margin-top: 20px;
    margin-bottom: 40px;

    &:nth-child(odd) {
      float: left;
    }

    &:nth-child(even) {
      float: right;
    }

    img.profile-picture {
      @picture-radius: 22px;
      // position: absolute;
      // top: 168px;
      // left: 30px;

      float: left;
      margin-right: 10px;
      z-index: 10;

      border-radius: @picture-radius;
      width: @picture-radius * 2;
      height: auto;
    }

    div.edit-or-read {
      .background-transition;
      position: absolute;
      bottom: 0px;
      width: 100%;
      background-color: @unselected-background-color;

      &:hover {
        background-color: @action-color;
      }

      a {
        color: @black-color;
      }

      div#edit-this-story {
        .background-transition;
        .color-transition;
        padding: 12px;
        padding-left: 30px;
        &:hover {
          color: white;
        }
      }
    }
  }

}
